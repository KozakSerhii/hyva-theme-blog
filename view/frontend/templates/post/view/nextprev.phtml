/**
 * Blog post next and prev post links
 *
 * @var $block \Magefan\Blog\Block\Post\View\NextPrev
 */
?>

<?php if ($block->displayLinks()) { ?>
    <?php
        $prevPost = $block->getPrevPost();
        $nextPost = $block->getNextPost();
    ?>
    <?php if ($prevPost || $nextPost) { ?>
        <div class="post-nextprev-hld flex py-5 border-gray-300 border-2 border-r-0 border-l-0 mb-10">
            <?php if ($prevPost) { ?>
                <?php $title = $block->escapeHtml($prevPost->getTitle()) ?>
                <a class="nextprev-link prev-link w-1/2 text-left text-lg text-[#222] hover:underline"
                   href="<?= $block->escapeUrl($prevPost->getPostUrl()) ?>"
                   title="<?= $block->escapeHtml(__('Read %1', $title)) ?>">
                    <?= $block->escapeHtml(__('&larr; Previous')) ?>
                </a>
            <?php } ?>
            <?php if ($nextPost) { ?>
                <?php $title = $block->escapeHtml($nextPost->getTitle()) ?>
                <a class="nextprev-link next-link w-1/2 text-right text-lg text-[#222] hover:underline"
                   href="<?= $block->escapeUrl($nextPost->getPostUrl()) ?>"
                   title="<?= $block->escapeHtml(__('Read %1', $title)) ?>">
                    <?= $block->escapeHtml(__('Next &rarr;')) ?>
                </a>
            <?php } ?>
        </div>
    <?php } ?>
<?php } ?>
